src_configure() {
	echo " * Attempting to update autotool files"
	sed -i 's,AM_CONFIG_HEADER,AC_CONFIG_HEADERS,' configure.ac
	sed -i "s,INCLUDES,AM_CPPFLAGS," Makefile.am
	autoupdate
	touch config.rpath
	automake
	autoreconf -fiv || echo Expected failure.. checking if it\'ll configure...
	configure_default
}

