HOMEPAGE=""
DESCRIPTION=""
LICENSE=""
SRC_URI="https://downloads.sourceforge.net/lame/lame-${PKG_VER}.tar.gz"
DEPS="sys-libs/ncurses"
BDEPS=""
RDEPS="dev-lang/nasm"
ARCHS="x86 x86_64"
SLOT=0

src_configure() {
	LDFLAGS+="-ltinfow" ./configure --prefix=/usr \
				--disable-static \
				--enable-mp3rtp \
				--enable-nasm
}

src_test() {
	make $MAKEOPTS test
}

src_install() {
	make DESTDIR="${D}" pkghtmldir=/usr/share/doc/lame-${PKG_VER} install
}
