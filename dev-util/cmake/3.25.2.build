HOMEPAGE="https://cmake.org/"
DESCRIPTION="Cross platform Make"
SRC_URI="https://cmake.org/files/v${PKG_VER%.*}/cmake-${PKG_VER}.tar.gz"
LICENSE="CMake"
DEPS="app-arch/bzip2 app-arch/libarchive app-arch/xz-utils dev-libs/expat dev-libs/icu dev-libs/libuv dev-libs/libxml2 dev-libs/openssl net-misc/curl sys-apps/acl sys-apps/attr sys-libs/zlib"
BDEPS=""
RDEPS=""
SLOT=0

src_configure() {
	sed -i '/"lib64"/s/64//' Modules/GNUInstallDirs.cmake
	./bootstrap --prefix=/usr \
				--system-libs \
				--mandir=/share/man \
				--no-system-jsoncpp \
				--no-system-librhash \
				--docdir=/share/doc/cmake-${PKG_VER}
}

src_test() { :; }
