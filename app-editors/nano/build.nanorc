## Syntax highlighting for spkg build scripts.

syntax build "\.build$|spkg"
header "^#!.*/((env[[:blank:]]+)?((a|ba|c|da|k|mk|pdk|tc|z)?sh)|busybox[[:blank:]]+sh|openrc-run|runscript)\>"
header "-\*-.*shell-script.*-\*-"
magic "(POSIX|Bourne-Again) shell script.*text"
comment "#"

linter dash -n

# Function declarations.
color brightgreen "^[A-Za-z0-9_-]+\(\)"

# Variable declarations.
color red "[A-Za-z\-_]+="

# Keywords, symbols, and comparisons.
color green "\<(break|case|continue|do|done|elif|else|esac|exit|fi|for|function|if|in|read|return|select|shift|then|time|until|while)\>"
color green "\<(declare|eval|exec|export|let|local)\>"
color green "[][{}():;|`$<>!=&\]"
color green "-(eq|ne|gt|lt|ge|le|ef|ot|nt)\>"

# Short and long options.
color brightmagenta "[[:blank:]](-[A-Za-z]|--\<[A-Za-z-]+)\>"

# Common commands.
color brightblue "\<(awk|cat|cd|ch(grp|mod|own)|cp|cut|echo|env|grep|head|install|ln|make|mkdir|mv|popd|printf|pushd|rm|rmdir|sed|set|sort|tail|tar|touch|umask|unset)\>"
color normal "[.-]tar\>"
color brightblue "\<(checkFileDep|isDependedOn|getFullPkgList|expandSets|getdep|doDeps|archivePackage|stripPackage|getBDeps|installList|sinstall|setKernelConfig|buildKernel|rebuildModules|buildBDeps|fetch_file|preservedRebuild|filterArch|filterSlot|fileToList|listToLEntry|DB-getPkg|DB-getPkgList|Installed-getPkg|Installed-getPkgList|getData|getLatest|getCategory|getName|getVersion|getRevision|getVerRev|getSlot|getFlags|hashdir|die|inform|unpack|spatch|spatches|filter-flags|append-ldflags|append-cflags|append-cxxflags|append-cppflags|getMajorVer|getMinorVer|getMicroVer|use-enable|pkg-has-flag|pkg-restricts|checkinlist|checkKernelConfig|addUser|addGroup|delUser|delGroup|install-init.d|function version_gt|function version_le|function version_lt|function version_ge|src_prepare|src_fetch|src_verify|src_unpack|src_patch|src_configure|src_compile|src_test|src_install|post_install|src_uninstall|src_post_uninstall|bootstrap_default|bootstrap|configure_default|compile_default|test_default|install_default|uninstall_default|fetch_list|fetch_default|verify_default|unpack_default|patch_default|prepare_default|buildPackage|installPackage|uninstall|cleanup|parse_cmdline|populate_list|src_configure|src_compile|src_test|src_install|die|parse_cmdline|setBuildENV)\>"

# Basic variable names (no braces).
color brightred "\$([-@*#?$!0-9]|[[:alpha:]_][[:alnum:]_]*)"
# More complicated variable names; handles braces and replacements and arrays.
color brightred "\$\{[#!]?([-@*#?$!]|[0-9]+|[[:alpha:]_][[:alnum:]_]*)(\[([[:blank:]]*[[:alnum:]_]+[[:blank:]]*|@)\])?(([#%/]|:?[-=?+])[^}]*\}|\[|\})"

# Comments.
color cyan "(^|[[:blank:]])#.*"
color brightcyan "(^|[[:blank:]])##.*"

# Strings.
color brightyellow ""([^"\]|\\.)*"|'([^'\]|\\.)*'"

# Trailing whitespace.
color ,green "[[:space:]]+$"
