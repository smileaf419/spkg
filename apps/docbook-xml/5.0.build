		"docbook.rnc" /usr/share/xml/docbook/schema/rng/5.0/catalog.xml
	xmlcatalog --noout --add "uri" \
		"http://docbook.org/xml/5.0/rng/docbookxi.rnc" \
		"docbookxi.rnc" /usr/share/xml/docbook/schema/rng/5.0/catalog.xml
	xmlcatalog --noout --add "uri" \
