		"file:///usr/share/xml/docbook/schema/xsd/5.0/xml.xsd" \
		/etc/xml/docbook-5.0

	xmlcatalog --noout --add "uri" \
		"http://www.oasis-open.org/docbook/xml/5.0/sch/docbook.sch" \
		"file:///usr/share/xml/docbook/schema/sch/5.0/docbook.sch" \
		/etc/xml/docbook-5.0
	xmlcatalog --noout --add "uri" \
