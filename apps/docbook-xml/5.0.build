		"xlink.xsd" /usr/share/xml/docbook/schema/xsd/5.0/catalog.xml
	xmlcatalog --noout --add "uri" \
		 "http://www.oasis-open.org/docbook/xml/5.0/xsd/xlink.xsd" \
		 "xlink.xsd" /usr/share/xml/docbook/schema/xsd/5.0/catalog.xml
	xmlcatalog --noout --add "uri" \
		 "http://docbook.org/xml/5.0/xsd/xml.xsd" \
