HOMEPAGE="http://www.libpng.org/"
DESCRIPTION="Portable Network Graphics library"
LICENSE="libpng2"
SRC_URI=("https://downloads.sourceforge.net/libpng/libpng-${PKG_VER}.tar.xz")
PATCHES=("https://downloads.sourceforge.net/sourceforge/libpng-apng/libpng-1.6.40-apng.patch.gz")
DEPS="system/zlib"
BDEPS=""
RDEPS=""
ARCHS="~x86 ~x86_64"
SLOT=0
ABILIBS="64 x32 32"

src_configure() {
	configure_default --bindir=/bin
}

src_install() {
	install_default

	mkdir -pv "${D}"/usr/share/doc/libpng-${PKG_VER}
	cp -v README libpng-manual.txt "${D}"/usr/share/doc/libpng-${PKG_VER}
}
