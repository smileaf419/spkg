)
DEPS="system/zlib"
BDEPS=""
RDEPS=""
ARCHS="x86 x86_64"
SLOT=0

src_configure() {
	## Fix some of the warnings
	mv configure.{in,ac}
	find . -iname Makefile.am -exec sed -i 's,INCLUDES,AM_CPPFLAGS,' {} \;
	autoreconf -fiv

	configure_default
}

