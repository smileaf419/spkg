src_test() { :; }

src_install() { :; }

post_install() {
	addGroup plex -g 979
	addUser plex                         \
		-d /var/lib/plexmediaserver  \
		-u 979                       \
		-s /bin/false                \
		-c "Plex_User"               \
		-g plex
}

src_uninstall() {
	delUser plex
	delGroup plex
}
