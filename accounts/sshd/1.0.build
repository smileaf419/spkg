HOMEPAGE="https://github.com/smileaf419/spkg"
DESCRIPTION="SSHD User and Group"
SRC_URI=""
LICENSE="none"
DEPS=""
BDEPS=""
RDEPS=""
SLOT=0
B=""
RESTRICT="nostrip nobin"

src_configure() { :; }

src_compile() { :; }

src_test() { :; }

src_install() {
	addGroup sshd -g 50
	addUser sshd         \
		-c 'SSH'         \
		-d /var/lib/sshd \
		-g sshd          \
		-s /bin/false    \
		-u 50
}

src_uninstall() {
	delUser sshd
}
