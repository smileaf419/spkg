src_configure() { :; }

src_compile() { :; }

src_test() { :; }

src_install() { :; }

post_install() {
	addGroup lpadmin -g 19
	addUser lp                  \
		-d /var/spool/cups      \
		-u 9                    \
		-s /bin/false           \
		-c "Print Service User" \
		-g lpadmin
}

src_uninstall() {
	delUser lp
	delGroup lpadmin
}
