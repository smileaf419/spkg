SRC_URI=("https://archive.xfce.org/src/xfce/${PKG_NAME}/${PKG_VER%.*}/${PKG_NAME}-${PKG_VER}.tar.bz2")
#[[ $VERIFY_SIG == 1 ]] && SRC_URI+=("")
PATCHES=()
DEPS="dev-libs/glib dev-libs/libgudev x11-libs/gtk+:3 x11-libs/libnotify x11-libs/pango xfce-base/libxfce4ui xfce-base/libxfce4util xfce-base/xfconf"
