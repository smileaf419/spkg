HOMEPAGE="https://sourceware.org/libffi/"
DESCRIPTION=""
LICENSE=""
SRC_URI="https://github.com/libffi/libffi/releases/download/v${PKG_VER}/libffi-${PKG_VER}.tar.gz"
DEPS=""
BDEPS=""
RDEPS=""
ARCHS="x86 x86_64"
SLOT=0
_SPKG_CLEAN=distclean
ABILIBS="64 x32 32"

src_configure() {
	[[ $ABILIB != 64 ]] && CC="gcc -m$ABILIB" && CXX="g++ -m$ABILIB"
	configure_default --with-gcc-arch=native --libdir=/usr/lib$ABILIB
}

src_install() {
	if [[ $ABILIB == 64 ]]; then
		install_default
	else
		make DESTDIR=$PWD/DESTDIR install
		mkdir -p $D/usr/lib$ABILIB
		cp -Rv DESTDIR/usr/lib$ABILIB/* $D/usr/lib$ABILIB
		rm -rf DESTDIR
	fi
}
