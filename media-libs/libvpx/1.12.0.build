ARCH="x86 x86_64"
SLOT=0
BUILD_SEPERATE_DIR=yes

src_configure() {
	sed -i 's/cp -p/cp/' ../build/make/Makefile

	# configure_default
	../configure --prefix=/usr \
				--enable-shared \
				--disable-static
}

src_test() {
	LD_LIBRARY_PATH=. make $MAKEOPTS test
}
