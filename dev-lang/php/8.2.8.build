HOMEPAGE="https://www.php.net/"
DESCRIPTION="PHP Hypertext Preprocessor."
LICENSE="PHP"
SRC_URI=("https://www.php.net/distributions/php-${PKG_VER}.tar.xz")
PATCHES=()
DEPS="app-arch/bzip2 dev-db/sqlite dev-libs/gmp dev-libs/libpcre2 dev-libs/libxml2 dev-libs/libxslt dev-libs/openssl sys-libs/gdbm sys-libs/readline sys-libs/zlib"
BDEPS="media-libs/gd"
RDEPS=""
ARCHS="~x86 ~x86_64"
SLOT=0

src_configure() {
	./configure --prefix=/usr                \
				--sysconfdir=/etc            \
				--localstatedir=/var         \
				--datadir=/usr/share/php     \
				--mandir=/usr/share/man      \
				--without-pear               \
				--enable-fpm                 \
				--with-fpm-user=apache       \
				--with-fpm-group=apache      \
				--with-config-file-path=/etc \
				--with-zlib                  \
				--enable-bcmath              \
				--with-bz2                   \
				--enable-calendar            \
				--enable-dba=shared          \
				--with-gdbm                  \
				--with-gmp                   \
				--enable-ftp                 \
				--with-gettext               \
				--enable-mbstring            \
				--disable-mbregex            \
				--with-readline              \
				--with-pic                   \
				--with-external-pcre         \
				--enable-zts                 \
				--with-openssl               \
				--with-xsl                   \
				--with-external-gd
				#--enable-gd
}

src_install() {
	make INSTALL_ROOT="${D}" install
}
