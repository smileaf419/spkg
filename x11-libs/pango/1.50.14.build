HOMEPAGE="https://pango.gnome.org"
DESCRIPTION="Library for laying out and rendering of text, with an emphasis on internationalization"
LICENSE="LGPLv2.1"
SRC_URI=("https://download.gnome.org/sources/pango/${PKG_VER%.*}/pango-${PKG_VER}.tar.xz")
PATCHES=("https://gitlab.gnome.org/GNOME/pango/-/commit/e93dbd66973040f1e0afcba0dc7c712c27d75d59.patch => pango-$PKG_VER-gcc13.patch")
DEPS="dev-libs/fribidi dev-libs/glib media-libs/fontconfig media-libs/freetype media-libs/harfbuzz x11-libs/cairo x11-libs/libX11 x11-libs/libXft x11-libs/libXrender"
BDEPS=""
RDEPS=""
ARCHS="x86 x86_64"
SLOT=0

setBuildENV meson ninja

src_configure() {
	configure_default --wrap-mode=nofallback
}

