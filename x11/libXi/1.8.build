HOMEPAGE="https://wiki.x.org/wiki/ https://gitlab.freedesktop.org/xorg/lib/libXi"
DESCRIPTION="X.Org Xi library"
LICENSE="MIT"
SRC_URI=("https://www.x.org/pub/individual/lib/${PKG_NAME}-${PKG_VER}.tar.bz2")
PATCHES=()
DEPS="x11/libX11 x11/libXext"
BDEPS=""
RDEPS=""
ARCHS="x86 x86_64"
SLOT=0

src_configure() {
	./configure --prefix=/usr \
				--sysconfdir=/etc \
				--localstatedir=/var \
				--disable-static \
				--docdir=/usr/share/doc/${PKG_NAME}-${PKG_VER}
}
