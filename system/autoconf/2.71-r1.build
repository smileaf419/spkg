DEPS=""
BDEPS="devel/perl system/m4"
RDEPS=""
ARCHS="x86 x86_64"
SLOT=2.7
export TESTSUITEFLAGS=-j4

src_configure() {
	sed -e 's/SECONDS|/&SHLVL|/'               \
		-e '/BASH_ARGV=/a\        /^SHLVL=/ d' \
		-i.orig tests/local.at

	configure_default
}
