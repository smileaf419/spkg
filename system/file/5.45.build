HOMEPAGE="https://www.darwinsys.com/file/"
DESCRIPTION=""
LICENSE=""
SRC_URI="https://astron.com/pub/file/file-${PKG_VER}.tar.gz"
DEPS="apps/bzip2 apps/xz-utils apps/zstd system/zlib"
BDEPS=""
RDEPS=""
ARCHS="x86 x86_64"
SLOT=0
ABILIBS="64 x32 32"
_SPKG_CLEAN=distclean
_LIB_ROOT_INSTALL=1

src_configure() {
	case $ABILIB in
		64) unset CC ;;
		*) export CC="gcc -m$ABILIB" ;;
	esac
	configure_default --bindir=/bin
}

src_install() {
	if [[ -z $ABILIB || $ABILIB == 64 ]]; then
		install_default
		mkdir -p "$D/$ROOT"/usr/bin
		ln -sf /bin/file "$D/$ROOT"/usr/bin/file
	else
		make DESTDIR=$PWD/DESTDIR install
		mkdir -p $D/$ROOT/$(libdir)
		cp -Rv DESTDIR/$(libdir)/* $D/$ROOT/$(libdir)
		rm -rf DESTDIR
	fi
}

bootstrap() {
	# Make a temp copy of file
	mkdir build
	pushd build
		../configure --disable-bzlib      \
					 --disable-libseccomp \
					 --disable-xzlib      \
					 --disable-zlib
		compile_default
	popd

	configure_default --build=$(./config.guess) --bindir=/bin
	compile_default FILE_COMPILE=$(pwd)/build/src/file
	src_install
	rm -v $D/$ROOT/lib*/libmagic.la
}
